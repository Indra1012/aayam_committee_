<script>
  function handleFileSelect(input, iconId, textId, previewId) {
    const file = input.files[0];
    if (!file) return;
    const previewBox  = document.getElementById(previewId);
    const previewImg  = document.getElementById(previewId + 'Img');
    const previewName = document.getElementById(previewId + 'Name');
    const iconEl      = document.getElementById(iconId);
    const textEl      = document.getElementById(textId);
    const reader = new FileReader();
    reader.onload = (e) => { previewImg.src = e.target.result; };
    reader.readAsDataURL(file);
    previewName.textContent = file.name;
    iconEl.textContent = '‚úÖ';
    textEl.innerHTML   = '<span class="upload-browse">Change file</span>';
    previewBox.style.display = 'flex';
  }

  function clearFileSelect(inputId, iconId, textId, previewId) {
    const input       = document.getElementById(inputId);
    const previewBox  = document.getElementById(previewId);
    const iconEl      = document.getElementById(iconId);
    const textEl      = document.getElementById(textId);
    input.value = '';
    previewBox.style.display = 'none';
    iconEl.textContent = 'üìÅ';
    const isEvent = inputId === 'evtFile';
    textEl.innerHTML = isEvent
      ? 'Drop an event image or <span class="upload-browse">browse</span>'
      : 'Drop an activity image or <span class="upload-browse">browse</span>';
  }
</script>
